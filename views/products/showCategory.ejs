<% layout('layouts/boilerplate') %>
<section>
  <div class="container">
    <div class="row mt-3">
      <% for(product of products.reverse()) { %>
      <div class="col-xl-2 col-lg-3 col-md-3 col-sm-4 col-6 p-1">
        <div class="card shadow">
          <img src="<%= product.imgLink %>" class="card-img-top" alt="" />
          <div class="card-body">
            <h6
              class="card-title text-center"
              style="
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
              "
            >
              <%= product.name %>
            </h6>
            <p class="card-text text-center">
              <strong class="text-primary m-2">
                <%= product.salePrice %>.00 </strong
              ><strong
                class="text-danger fw-light text-decoration-line-through m-2"
              >
                <%= product.price %>
              </strong>
            </p>
            <div class="gap-2 d-grid">
              <a
                href="/product/<%= product._id %>"
                class="btn btn-sm btn-primary"
                >View</a
              >
            </div>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</section>
