<% layout('layouts/boilerplate') %> 
<section class="container mt-3">
    <div>
        <h1 class="text-center text-danger fw-bold p-2">Customer Querries</h1>
        <table class="table table-hover border">
            <thead>
                <tr class="table-dark">
                    <th scope="col">No.</th>
                    <th scope="col">Name</th>
                    <th scope="col">Contact</th>
                    <th scope="col">Subject</th>
                    <th scope="col">Address</th>
                    <th scope="col">View</th>
                </tr>
            </thead>
            <tbody class="text-muted">
                <% querries = querries.reverse() %> 
                <% for(let i=0; i < querries.length; i++) {%>
                    <tr>
                        <th scope="row">
                            <%= (i+1) %>
                        </th>
                        <td>
                            <%= querries[i].name %>
                        </td>
                        <td>
                            <%= querries[i].number %>
                        </td>
                        <td>
                            <%= querries[i].subject %>
                        </td>
                        <td>
                            <%= querries[i].address %>
                        </td>
        
                        <td><a href="/admin/querry/<%= querries[i]._id %>" class="btn btn-sm btn-danger">View</a></td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
</section>