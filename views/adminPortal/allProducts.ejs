<% layout('layouts/boilerplate') %> 
<section class="container mt-3">
    <div>
        <h1 class="text-center text-danger fw-bold p-2">All Product List</h1>
        <table class="table table-hover border">
            <thead>
                <tr class="table-dark">
                    <th scope="col">No.</th>
                    <th scope="col">Name</th>
                    <th scope="col">Sale Price</th>
                    <th scope="col">Price</th>
                    <th scope="col">Weight (kg)</th>
                    <th scope="col">Flavour</th>
                    <th scope="col">Shape</th>
                    <th scope="col">Tier</th>
                    <th scope="col">View</th>
                    <th scope="col">Edit</th>
                </tr>
            </thead>
            <tbody class="text-muted">
                <% products = products.reverse() %> 
                <% for(let i=0; i < products.length; i++) {%>
                    <tr>
                        <th scope="row">
                            <%= (i+1) %>
                        </th>
                        <td>
                            <%= products[i].name %>
                        </td>
                        <td>
                            <%= products[i].salePrice %>
                        </td>
                        <td>
                            <%= products[i].price %>
                        </td>
                        <td>
                            <%= products[i].weight %>
                        </td>
                        <td>
                            <%= products[i].flavour %>
                        </td>
                        <td>
                            <%= products[i].shape %>
                        </td>
                        <td>
                            <%= products[i].tier %>
                        </td>
                        <td><a href="/product/<%= products[i]._id %>" class="btn btn-sm btn-danger">View</a></td>
                        <td><a href="/admin/<%= products[i]._id %>/edit" class="btn btn-sm btn-warning">Edit</a></td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>    
</section>
